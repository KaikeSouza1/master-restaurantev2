{
  "version": 2,
  "installCommand": "npm install && npm run prisma:generate",
  "builds": [
    {
      "src": "packages/backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "packages/backend/dist/**",
          "packages/backend/node_modules/**",
          "node_modules/@prisma/**",
          "node_modules/.prisma/**"
        ],
        "helpers": false,
        "external": ["@nestjs/microservices", "@nestjs/websockets"]
      }
    },
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/packages/backend/src/main.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}